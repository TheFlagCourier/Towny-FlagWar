root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{bat, cmd}]
end_of_line = crlf

[*.{java, gradle}]
indent_size = 2
trim_trailing_whitespace = true
# Not supported by all editors - please set your IDE accordingly, and line-wrap your code if
#  required.
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
